<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/relativeLayout"
	android:layout_width="match_parent"
	android:layout_height="72dp"
	android:background="?android:attr/selectableItemBackground"
	android:clickable="true"
	android:focusable="true">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/imageview_profiles_portrait"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="16dp"
		android:contentDescription="@string/room_availability_indicator"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/all_prefs_personal"
		tools:layout_conversion_absoluteHeight="32dp"
		tools:layout_conversion_absoluteWidth="32dp"/>


	<TextView
		android:id="@+id/textview_profiles_name"
		android:layout_width="0dp"
		android:layout_height="20dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="16dp"
		android:gravity="center_vertical"
		android:textColor="?android:attr/textColorPrimary"
		android:textSize="13sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imageview_profiles_portrait"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/textview_profiles_school"
		android:layout_width="0dp"
		android:layout_height="20dp"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginBottom="16dp"
		android:gravity="center_vertical"
		android:textColor="?android:attr/textColorSecondary"
		android:textSize="13sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imageview_profiles_portrait"/>

</androidx.constraintlayout.widget.ConstraintLayout>
